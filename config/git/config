# vim: ft=gitconfig ts=2 sw=0

[include]
  path = ~/.config/git/config-user

[pull]
  rebase = true

[push]
  autoSetupRemote = true
  default = simple
  followTags = true

[advice]
  skippedCherryPicks = false

[init]
  defaultBranch = master

[core]
  quotepath = off

[blame]
  markIgnoredLines = true
  markUnblamableLines = true

[alias]
  fuck = commit --all --no-edit --amend
  fpush = push --force-with-lease

# git delta
[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  true-color = always
  navigate = true
  tabs = 4

[merge]
  conflictstyle = diff3

[diff]
  colorMoved = default

[branch]
  sort = -committerdate

[fetch]
  prune = true
  pruneTags = true
  all = true
